brew "ecsgo"    #  Connect to ECS using the ExecuteCommand API

tap "abyss/tools"
brew "awsp"    # AWS profile switcher
brew "tfws"    # Terraform workspace switcher

# Cloud & Infrastructure - Kubernetes
